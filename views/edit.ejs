<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
    </head>
    <body data-barba="wrapper">
        <canvas id="canvas"></canvas>
        <div id="outer-container">
            <%- include('./partials/appbar') %>
            <div
                class="container"
                data-barba="container"
                data-barba-namespace="edit"
            >
                <h1 class="title">Edit Project</h1>
                <form id="edit-form">
                    <div class="form-group">
                        <label for="input-project-image">Project Image</label>
                        <img
                            src="<%= project.image %>"
                            id="edit-project-image"
                            alt="<%= project.title %>"
                        />
                        <input
                            id="input-project-image"
                            type="url"
                            name="image-url"
                            value="<%= project.image %>"
                            required
                            class="form-control edit-inputs"
                        />
                    </div>
                    <div class="form-group">
                        <label for="input-project-title">Project Title</label>
                        <input
                            id="input-project-title"
                            type="text"
                            placeholder="ex. Anamoly Detection System"
                            name="title"
                            value="<%= project.title %>"
                            required
                            class="form-control edit-inputs"
                        />
                    </div>
                    <div class="form-group">
                        <label for="input-project-link">Project Link</label>
                        <input
                            id="input-project-link"
                            type="url"
                            placeholder="ex. https://google.com"
                            name="link"
                            value="<%= project.link %>"
                            required
                            class="form-control edit-inputs"
                        />
                    </div>
                    <div class="form-group button-update-container">
                        <button
                            id="button-update"
                            class="btn-theme"
                            data-content="Update"
                            type="submit"
                        >
                            Update
                        </button>
                    </div>
                    <svg id="loader" width="30" height="30">
                        <circle
                            class="loader-circle"
                            cx="15"
                            cy="15"
                            r="10"
                            fill="none"
                            stroke="#70c542"
                            stroke-linecap="round"
                            stroke-width="2"
                        />
                    </svg>
                </form>
                <div class="error">
                    <p><%= error %></p>
                </div>
                <div class="success">
                    <p><%= success %></p>
                </div>
            </div>
        </div>
        <%- include('./partials/footer') %>
    </body>
</html>
