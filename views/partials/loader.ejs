<div id="page-loader">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="300"
        height="300"
        id="page-loader-svg"
    >
        <defs>
            <linearGradient id="gradient" gradientTransform="rotate(90)">
                <!-- Use CSS custom properties for the start / stop colors of the gradient -->
                <stop id="gradientStop1" offset="0%" stop-color="grey" />
                <stop id="gradientStop2 " offset="100%" stop-color="#ccc" />
            </linearGradient>
        </defs>
        <line class="page-load-circle" x1="0" y1="150" x2="125" y2="150" />
        <line class="page-load-circle" x1="175" y1="150" x2="300" y2="150" />
    </svg>
</div>
