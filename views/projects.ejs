<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
    </head>
    <body data-barba="wrapper">
        <%- include('./partials/loader') %>
        <canvas id="canvas"></canvas>
        <div id="outer-container">
            <%- include('./partials/appbar') %>
            <div
                class="container"
                data-barba="container"
                data-barba-namespace="projects"
            >
                <div id="project-canvas-container">
                    <canvas id="projects-canvas"> </canvas>
                    <div class="project-navigate">
                        <button class="btn project-nav-btn" id="project-prev">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="btn project-nav-btn" id="project-next">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                    <svg
                        id="loader"
                        class="loader-project"
                        width="30"
                        height="30"
                    >
                        <circle
                            class="loader-circle"
                            cx="15"
                            cy="15"
                            r="10"
                            fill="none"
                            stroke="#70c542"
                            stroke-linecap="round"
                            stroke-width="2"
                        />
                    </svg>
                </div>
                <div id="project-content">
                    <div class=".project-header">
                        <h2 id="project-title"></h2>
                        <a id="project-link" href="#" target="_blank">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                        <% if (admin) { %>
                        <a
                            id="edit-project-link"
                            class="tooltip-container"
                            href="/work"
                        >
                            <i class="fas fa-pencil-alt" style="color: black">
                                <span class="tooltiptext">Edit</span>
                            </i>
                        </a>
                        <button
                            class="btn tooltip-container"
                            id="project-delete"
                        >
                            <i style="color: red" class="fas fa-trash">
                                <span class="tooltiptext">Delete</span>
                            </i>
                        </button>
                        <% } %>
                    </div>
                    <p id="project-details"></p>
                    <ul id="project-tech"></ul>
                </div>
            </div>
        </div>
        <%- include('./partials/footer') %>
    </body>
</html>
